<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<AnchorPane fx:id="rootPane" prefWidth="1920" prefHeight="1080" style="-fx-background-color: #474B4F;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.talon.controllers.hr.ViewEmploymentDetailsPageController">
   <stylesheets>
      <URL value="@../../styles/styles.css" />
   </stylesheets>
   <children>
      <HBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <fx:include source="./SideNavigation.fxml" />
         <VBox HBox.hgrow="ALWAYS" spacing="20" alignment="TOP_CENTER">
            <padding>
               <javafx.geometry.Insets top="30" right="30" bottom="30" left="30" />
            </padding>
            <Label text="Employee Details" styleClass="header-label"/>
            <HBox spacing="10" alignment="CENTER">
               <ToggleButton fx:id="employmentDetailsToggle" text="Employment Details" selected="true" onAction="#handleToggle" />
               <ToggleButton fx:id="leaveEntitlementToggle" text="Leave Entitlement" onAction="#handleToggle" />
               <ToggleButton fx:id="externalWorkExperienceToggle" text="External Work Experience" onAction="#handleToggle" />
               <ToggleButton fx:id="internalWorkExperienceToggle" text="Internal Work Experience" onAction="#handleToggle" />
            </HBox>
            <ScrollPane fitToWidth="true" styleClass="custom-scroll-pane" VBox.vgrow="ALWAYS">
               <VBox spacing="20">
                  <GridPane fx:id="employmentDetailsGrid" hgap="20" vgap="20">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="400" />
                     </columnConstraints>
                     
                     <Label text="Full Name:" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                     <TextField fx:id="fullNameLabel" editable="false" styleClass="info-field" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                     
                     <Label text="Username:" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                     <TextField fx:id="usernameLabel" editable="false" styleClass="info-field" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                     
                     <Label text="Role:" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                     <ComboBox fx:id="roleComboBox" styleClass="info-field" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                     
                     <Label text="Position:" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                     <TextField fx:id="positionLabel" editable="false" styleClass="info-field" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                     
                     <Label text="Department:" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                     <TextField fx:id="departmentLabel" editable="false" styleClass="info-field" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                     
                     <Label text="Gross Salary:" styleClass="field-label" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                     <TextField fx:id="grossSalaryLabel" editable="false" styleClass="info-field" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                  </GridPane>
                  <GridPane fx:id="leaveEntitlementGrid" hgap="20" vgap="20" visible="false" managed="false">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200" />
                     </columnConstraints>
                     
                     <Label text="Leave Type" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                     <Label text="Entitled Days" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                     <Label text="Taken Days" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                     
                     <Label text="Annual Leave:" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                     <TextField fx:id="annualLeaveEntitled" editable="false" styleClass="info-field" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                     <TextField fx:id="annualLeaveTaken" editable="false" styleClass="info-field" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                     
                     <Label text="Medical Leave:" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                     <TextField fx:id="medicalLeaveEntitled" editable="false" styleClass="info-field" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                     <TextField fx:id="medicalLeaveTaken" editable="false" styleClass="info-field" GridPane.rowIndex="2" GridPane.columnIndex="2" />
                     
                     <Label text="Maternity Leave:" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                     <TextField fx:id="maternityLeaveEntitled" editable="false" styleClass="info-field" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                     <TextField fx:id="maternityLeaveTaken" editable="false" styleClass="info-field" GridPane.rowIndex="3" GridPane.columnIndex="2" />
                     
                     <Label text="Unpaid Leave:" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                     <TextField fx:id="unpaidLeaveEntitled" editable="false" styleClass="info-field" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                     <TextField fx:id="unpaidLeaveTaken" editable="false" styleClass="info-field" GridPane.rowIndex="4" GridPane.columnIndex="2" />
                  </GridPane>
                  <GridPane fx:id="externalWorkExperienceGrid" hgap="20" vgap="20" visible="false" managed="false">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="200" />
                     </columnConstraints>
                     
                     <Label text="Company Name" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                     <Label text="Position" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                     <Label text="Start Date" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                     <Label text="End Date" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="3" />
                     <Label text="Reason for Leaving" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="4" />
                  </GridPane>
                  <GridPane fx:id="internalWorkExperienceGrid" hgap="20" vgap="20" visible="false" managed="false">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
                     </columnConstraints>
                  </GridPane>
                  <Button fx:id="editButton" text="Edit" onAction="#handleEdit" styleClass="action-button" />
               </VBox>
            </ScrollPane>
         </VBox>
      </HBox>
   </children>
</AnchorPane>