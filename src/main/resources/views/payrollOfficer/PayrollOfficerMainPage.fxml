<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import java.net.URL?>

<AnchorPane fx:id="rootPane" prefWidth="1920" prefHeight="1080" style="-fx-background-color: #474B4F;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.talon.controllers.payrollOfficer.PayrollOfficerMainController">
   <stylesheets>
      <URL value="@../../styles/styles.css" />
   </stylesheets>
   <children>
      <HBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <fx:include source="./SideNavigation.fxml" />
         <VBox HBox.hgrow="ALWAYS" spacing="20" alignment="TOP_CENTER">
            <padding>
               <Insets top="30" right="30" bottom="30" left="30" />
            </padding>
            <Label text="Payroll Transaction Management" styleClass="header-label"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ComboBox fx:id="monthComboBox" promptText="Select Month"/>
               <ComboBox fx:id="yearComboBox" promptText="Select Year"/>
               <Button text="Load Transactions" onAction="#handleLoadTransactions"/>
               <Button text="Create New Transaction" onAction="#handleCreateNewTransaction"/>
            </HBox>
            <TableView fx:id="payrollTransactionTable" VBox.vgrow="ALWAYS">
               <columns>
               </columns>
            </TableView>
            <Button fx:id="resetFilterButton" text="Reset Filters" onAction="#handleResetFilter" />
         </VBox>
      </HBox>
   </children>
</AnchorPane>
